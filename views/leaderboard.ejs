                    <p>لا توجد مشاركات في هذا النموذج بعد</p>
                </div>
                <% } else { %>
                    <% let currentRank = 1; let lastScore = null; for (let index = 0; index <
                    leaderboardEntries.length; index++) { const entry = leaderboardEntries[index]; 
                    const scoreValue = typeof entry.score === 'number' ? entry.score : 0; 
                    if (scoreValue !== lastScore) { currentRank = index + 1; lastScore = scoreValue; } 
                    const gradeText = { prep1: "أولى إعدادي", prep2: "ثانية إعدادي", prep3: "ثالثة إعدادي", 
                    sec1: "أولى ثانوي", sec2: "ثانية ثانوي", sec3: "ثالثة ثانوي", 
                    teachers: "خادم", admins: "مشرف" }[entry.grade] || entry.grade; %>
