                        text: "تعذر إنشاء ملف Excel. يرجى المحاولة مرة أخرى.",
                        icon: "error",
                        confirmButtonText: "حسناً",
                        confirmButtonColor: "#e74c3c"
                    }).then(() => {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-file-excel"></i> تحميل Excel';
                    });
                }
            });
        }

        if (downloadPDF) {
            downloadPDF.addEventListener("click", async function () {
                const btn = this;
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';

                try {
                    await waitForLibrary('jspdf', () => typeof window.jspdf !== 'undefined');
                    
                    if (typeof window.jspdf === 'undefined') {
                        throw new Error('jsPDF library not loaded');
                    }

                    // Get data from server-side variables
                    const leaderboardData = <%- JSON.stringify(leaderboard) %>;
                    const formTopic = "<%= form.topic %>";
                    const questionCount = <%= questionCount %>;
                    const bestScore = <%= bestScore %>;
                    const averageScoreValue = <%= averageScoreValue.toFixed(1) %>;
                    const participantCount = <%= participantCount %>;

                    const { jsPDF } = window.jspdf;
                    const doc = new jsPDF({
                        orientation: "landscape",
                        unit: "mm",
                        format: "a4",
                        compress: true
                    });

                    const pageWidth = doc.internal.pageSize.getWidth();
                    const pageHeight = doc.internal.pageSize.getHeight();

                    doc.setFillColor(42, 27, 60);
                    doc.rect(0, 0, pageWidth, pageHeight, "F");

                    doc.setFont("helvetica", "bold");
                    doc.setTextColor(255, 204, 0);
                    doc.setFontSize(24);
                    doc.text("لوحة الترتيب - " + formTopic, pageWidth / 2, 20, { align: "center" });

                    doc.setFontSize(12);
                    doc.setTextColor(242, 244, 255);
                    doc.text("كاتدرائية السمائيين", pageWidth / 2, 30, { align: "center" });
                    doc.text("تاريخ التصدير: " + new Date().toLocaleDateString("ar-EG"), pageWidth / 2, 35, { align: "center" });

                    let yPosition = 50;

                    doc.setFontSize(14);
                    doc.setTextColor(255, 204, 0);
                    doc.text("الإحصائيات", 20, yPosition);
                    yPosition += 10;

                    doc.setFontSize(10);
                    doc.setTextColor(242, 244, 255);
                    
                    const stats = [
                        ["المعيار", "القيمة"],
                        ["أعلى نتيجة", bestScore + " / " + (questionCount || '—')],
                        ["متوسط الدرجات", averageScoreValue + " / " + (questionCount || '—')],
                        ["عدد المشاركات", participantCount],
                        ["موضوع النموذج", formTopic]
                    ];

                    stats.forEach((row, index) => {
                        doc.text(row[0], 25, yPosition);
                        doc.text(row[1], pageWidth - 25, yPosition, { align: "right" });
                        yPosition += 7;
                    });

                    yPosition += 10;

                    doc.setFontSize(14);
                    doc.setTextColor(255, 204, 0);
                    doc.text("تفاصيل المشاركين", 20, yPosition);
                    yPosition += 10;

                    doc.setFontSize(10);
                    doc.setTextColor(242, 244, 255);

                    const headers = ["الترتيب", "اسم المستخدم", "الاسم المعروض", "الصف", "النقاط", "وقت الإرسال"];
                    const colWidths = [15, 30, 35, 20, 20, 35];
                    let xPos = 20;
                    headers.forEach((header, i) => {
                        doc.text(header, xPos, yPosition);
                        xPos += colWidths[i];
                    });
                    yPosition += 5;

                    doc.setDrawColor(255, 204, 0);
                    doc.setLineWidth(0.5);
                    doc.line(20, yPosition, pageWidth - 20, yPosition);
                    yPosition += 10;

                    let currentRank = 1;
                    let lastScore = null;
                    
                    leaderboardData.forEach((entry, index) => {
                        if (yPosition > pageHeight - 20) {
                            doc.addPage();
                            doc.setFillColor(42, 27, 60);
                            doc.rect(0, 0, pageWidth, pageHeight, "F");
                            yPosition = 20;
                        }

                        const scoreValue = typeof entry.score === 'number' ? entry.score : 0;
                        if (scoreValue !== lastScore) {
                            currentRank = index + 1;
                            lastScore = scoreValue;
                        }

                        const formattedScore = scoreValue + '/' + questionCount;
                        const rowData = [
                            currentRank.toString(),
                            entry.username || '—',
                            entry.displayName || entry.username || 'غير معروف',
                            entry.grade || '—',
                            formattedScore,
                            entry.submissionTime || 'غير متاح'
                        ];

                        xPos = 20;
                        rowData.forEach((cell, i) => {
                            doc.text(cell.toString(), xPos, yPosition);
                            xPos += colWidths[i];
                        });

                        yPosition += 7;
                    });

                    const fileName = ("leaderboard-" + formTopic + ".pdf").replace(/[^a-z0-9\u0600-\u06FF]/gi, "_");
                    doc.save(fileName);

                    Swal.fire({
                        title: "تم التحميل بنجاح",
                        text: "تم تحميل ملف PDF بنجاح",
                        icon: "success",
                        confirmButtonText: "حسناً",
                        confirmButtonColor: "#27ae60",
                        timer: 2000,
                        timerProgressBar: true
                    }).then(() => {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-file-pdf"></i> تحميل PDF';
                    });

                } catch (error) {
                    console.error("Error generating PDF:", error);
                    Swal.fire({
                        title: "خطأ",
                        text: "تعذر إنشاء ملف PDF. يرجى المحاولة مرة أخرى.",
                        icon: "error",
                        confirmButtonText: "حسناً",
                        confirmButtonColor: "#e74c3c"
                    }).then(() => {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-file-pdf"></i> تحميل PDF';
                    });
                }
            });
        }

        function filterLeaderboard() {
            if (!filterGrade || !filterDate) return;
            
            const gradeFilter = filterGrade.value;
            const dateFilter = filterDate.value;
            const rows = document.querySelectorAll(".leaderboard-row");

            let visibleRows = Array.from(rows);

            if (gradeFilter !== "all") {
                visibleRows = visibleRows.filter(row => {
                    const grade = row.dataset.grade;
                    return grade === gradeFilter;
                });
            }

            if (dateFilter === "newest") {
                visibleRows.sort((a, b) => {
                    const dateA = new Date(a.dataset.date || 0);
                    const dateB = new Date(b.dataset.date || 0);
                    return dateB - dateA;
                });
            } else if (dateFilter === "oldest") {
                visibleRows.sort((a, b) => {
                    const dateA = new Date(a.dataset.date || 0);
                    const dateB = new Date(b.dataset.date || 0);
                    return dateA - dateB;
                });
            }

            // Hide all rows first
            rows.forEach(row => row.style.display = "none");

            if (visibleRows.length === 0) {
                if (leaderboardTable) {
                    leaderboardTable.style.display = "none";
                }
                const wrapper = document.querySelector(".leaderboard-table-wrapper");
                if (wrapper) {
                    const existingEmpty = wrapper.querySelector(".empty-state");
                    if (!existingEmpty) {
                        const emptyState = document.createElement("div");
                        emptyState.className = "empty-state";
                        emptyState.innerHTML = `
                            <i class="fas fa-search"></i>
                            <h3>لا توجد نتائج</h3>
                            <p>لا توجد نتائج تطابق معايير التصفية المحددة</p>
                        `;
                        wrapper.appendChild(emptyState);
                    }
                }
                return;
            }

            // Remove empty state if exists
            const wrapper = document.querySelector(".leaderboard-table-wrapper");
            if (wrapper) {
                const emptyState = wrapper.querySelector(".empty-state");
                if (emptyState) {
                    emptyState.remove();
                }
            }

            // Show filtered rows
            if (leaderboardTable) {
                leaderboardTable.style.display = "table";
            }
            visibleRows.forEach(row => row.style.display = "table-row");
        }

        if (filterGrade) filterGrade.addEventListener("change", filterLeaderboard);
        if (filterDate) filterDate.addEventListener("change", filterLeaderboard);
        if (refreshBtn) {
            refreshBtn.addEventListener("click", function () {
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحديث...';
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            });
        }

        document.addEventListener("DOMContentLoaded", hydrateUser);

        const suggestionsToggle = document.getElementById("suggestionsToggle");
        const suggestionsSubmenu = document.getElementById("suggestionsSubmenu");

        if (suggestionsToggle) {
            suggestionsToggle.addEventListener("click", function (e) {
                e.stopPropagation();
                this.classList.toggle("active");
                const icon = this.querySelector(".toggle-icon");
                if (this.classList.contains("active")) {
                    icon.classList.remove("fa-chevron-down");
                    icon.classList.add("fa-chevron-up");
                    suggestionsSubmenu.style.maxHeight = suggestionsSubmenu.scrollHeight + "px";
                } else {
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                    suggestionsSubmenu.style.maxHeight = "0";
                }
            });
        }

        document.addEventListener("click", function (e) {
            if (!e.target.closest(".suggestions-nav-item")) {
                const suggestionsToggle = document.getElementById("suggestionsToggle");
                const suggestionsSubmenu = document.getElementById("suggestionsSubmenu");

                if (suggestionsToggle && suggestionsToggle.classList.contains("active")) {
                    suggestionsToggle.classList.remove("active");
                    const icon = suggestionsToggle.querySelector(".toggle-icon");
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                    suggestionsSubmenu.style.maxHeight = "0";
                }
            }
        });
    </script>
    <script>
        function hideCurrentPageFromNav() {
            const currentPage = "suggestion";
            const navButtonsToHide = document.querySelectorAll("[data-page]");
            navButtonsToHide.forEach((element) => {
                if (element.getAttribute("data-page") === currentPage) {
                    element.style.display = "none";
                }
            });
        }
        document.addEventListener("DOMContentLoaded", hideCurrentPageFromNav);
    </script>
