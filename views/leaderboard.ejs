      }

      .user-details h3 {
        font-size: 18px;
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 5px;
      }

      .user-details span {
        font-size: 14px;
        color: #bdc3c7;
        background: rgba(52, 73, 94, 0.5);
        padding: 3px 10px;
        border-radius: 12px;
      }

      .logout-btn-mobile {
        display: none;
        background: #e74c3c;
        color: white;
        border: none;
        width: 45px;
        height: 45px;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        transition: all var(--transition-speed);
      }

      .logout-btn-mobile:hover {
        background: #c0392b;
        transform: scale(1.1);
      }

