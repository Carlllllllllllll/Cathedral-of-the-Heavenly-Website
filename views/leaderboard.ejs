                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-camera"></i> تحميل كصورة';
                }
            });
        }

        if (downloadExcel) {
            downloadExcel.addEventListener("click", async function () {
                const btn = this;
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';

                try {
                    await waitForLibrary('XLSX', () => typeof XLSX !== 'undefined');
                    
                    if (typeof XLSX === 'undefined') {
                        throw new Error('XLSX library not loaded');
                    }

                    // Get data from server-side variables embedded in the page
