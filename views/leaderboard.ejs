                        Author: "كاتدرائية السمائيين",
                        CreatedDate: new Date()
                    };

                    // Prepare worksheet data
                    const worksheetData = [
                        ["الترتيب", "اسم المستخدم", "الاسم المعروض", "الصف", "النقاط", "وقت الإرسال"]
                    ];

                    let currentRank = 1;
                    let lastScore = null;
                    
                    leaderboardData.forEach((entry, index) => {
                        const scoreValue = typeof entry.score === 'number' ? entry.score : 0;
                        if (scoreValue !== lastScore) {
                            currentRank = index + 1;
                            lastScore = scoreValue;
                        }
                        
                        const formattedScore = scoreValue + '/' + questionCount;
                        worksheetData.push([
                            currentRank,
                            entry.username || '—',
                            entry.displayName || entry.username || 'غير معروف',
                            entry.grade || '—',
                            formattedScore,
                            entry.submissionTime || 'غير متاح'
                        ]);
                    });

                    // Prepare stats data
                    const statsData = [
                        ["إحصائيات لوحة الترتيب"],
                        [],
                        ["المعيار", "القيمة"],
                        ["أعلى نتيجة", bestScore + " / " + (questionCount || '—')],
                        ["متوسط الدرجات", averageScoreValue + " / " + (questionCount || '—')],
                        ["عدد المشاركات", participantCount],
                        ["موضوع النموذج", formTopic]
                    ];

                    const ws1 = XLSX.utils.aoa_to_sheet(worksheetData);
                    const ws2 = XLSX.utils.aoa_to_sheet(statsData);

                    // Set column widths
