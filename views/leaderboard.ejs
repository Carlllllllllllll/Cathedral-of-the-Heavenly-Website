      });

      const usernameDisplay = document.getElementById("username-display");
      const userRolePill = document.getElementById("user-role-pill");
      const downloadBtn = document.getElementById("downloadPhoto");

      async function hydrateUser() {
        try {
          const res = await fetch("/api/user-info", { credentials: "include" });
          const data = await res.json();
          if (!data.isAuthenticated) {
            window.location.href = "/login";
            return;
          }
          if (usernameDisplay) usernameDisplay.textContent = data.username;
          if (userRolePill) {
            userRolePill.textContent =
              data.role === "leadadmin"
                ? "ليد أدمن"
                : data.role === "admin"
                ? "أدمن"
                : data.role;
          }
        } catch (error) {
          console.error("Failed to hydrate user info:", error);
          if (typeof showNotification === "function") {
            showNotification(
              "error",
              "تعذر تحميل البيانات",
              "يرجى إعادة تسجيل الدخول."
            );
          }
        }
      }
      if (downloadBtn) {
        downloadBtn.addEventListener("click", function () {
          const target =
            document.querySelector(".leaderboard-container") ||
            document.getElementById("leaderboardTable");
          if (!target) {
            console.error("Leaderboard not found");
            return;
          }

          downloadBtn.disabled = true;
          downloadBtn.innerHTML =
            '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';

          const clone = target.cloneNode(true);
          clone.style.position = "absolute";
          clone.style.left = "-9999px";
          clone.style.top = "0";
          clone.style.background = "#2a1b3c";
          clone.style.padding = window.getComputedStyle(target).padding;
          clone.style.width = target.offsetWidth + "px";
          document.body.appendChild(clone);

          const enhanceText = (root) => {
            const allText = root.querySelectorAll(
              "th, td, h1, h2, h3, p, span, button, strong"
            );
            allText.forEach((el) => {
              el.style.fontFamily = "'Cairo', sans-serif";
              el.style.color = "#f2f4ff";
              el.style.direction = "rtl";
            });
          };
          enhanceText(clone);

          html2canvas(clone, {
            backgroundColor: "#2a1b3c",
            scale: 2,
            useCORS: true,
            logging: false,
            allowTaint: false,
            foreignObjectRendering: true,
            windowWidth: clone.scrollWidth,
            windowHeight: clone.scrollHeight,
          })
            .then((canvas) => {
              const link = document.createElement("a");
              const fileName = "leaderboard-<%= form.topic %>.png".replace(
                /[^a-z0-9]/gi,
                "_"
              );
              link.download = fileName;
              link.href = canvas.toDataURL("image/png");
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
            })
            .catch((error) => {
              console.error("Error generating image:", error);
              if (typeof showNotification === "function") {
                showNotification(
                  "error",
                  "تعذر حفظ الصورة",
                  "حاول مرة أخرى خلال لحظات."
                );
              } else {
                alert("حدث خطأ أثناء تحميل الصورة. يرجى المحاولة مرة أخرى.");
              }
            })
            .finally(() => {
              document.body.removeChild(clone);
              downloadBtn.disabled = false;
              downloadBtn.innerHTML =
                '<i class="fas fa-download"></i> تحميل كصورة';
            });
        });
      }

      document.addEventListener("DOMContentLoaded", hydrateUser);

      const suggestionsToggle = document.getElementById("suggestionsToggle");
      const suggestionsSubmenu = document.getElementById("suggestionsSubmenu");

      if (suggestionsToggle) {
        suggestionsToggle.addEventListener("click", function (e) {
          e.stopPropagation();
          this.classList.toggle("active");
          const icon = this.querySelector(".toggle-icon");
          if (this.classList.contains("active")) {
            icon.classList.remove("fa-chevron-down");
            icon.classList.add("fa-chevron-up");
            suggestionsSubmenu.style.maxHeight =
              suggestionsSubmenu.scrollHeight + "px";
          } else {
            icon.classList.remove("fa-chevron-up");
            icon.classList.add("fa-chevron-down");
            suggestionsSubmenu.style.maxHeight = "0";
          }
        });
      }

      document.addEventListener("click", function (e) {
        if (!e.target.closest(".suggestions-nav-item")) {
          const suggestionsToggle =
            document.getElementById("suggestionsToggle");
          const suggestionsSubmenu =
            document.getElementById("suggestionsSubmenu");

          if (
            suggestionsToggle &&
            suggestionsToggle.classList.contains("active")
          ) {
            suggestionsToggle.classList.remove("active");
            const icon = suggestionsToggle.querySelector(".toggle-icon");
            icon.classList.remove("fa-chevron-up");
            icon.classList.add("fa-chevron-down");
            suggestionsSubmenu.style.maxHeight = "0";
          }
        }
      });
    </script>
    <script>
      function hideCurrentPageFromNav() {
        const currentPage = "suggestion";
        const navButtonsToHide = document.querySelectorAll("[data-page]");
        navButtonsToHide.forEach((element) => {
          if (element.getAttribute("data-page") === currentPage) {
            element.style.display = "none";
          }
        });
      }
      document.addEventListener("DOMContentLoaded", hideCurrentPageFromNav);
    </script>
