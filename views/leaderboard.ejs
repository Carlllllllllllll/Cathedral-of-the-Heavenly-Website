        function waitForLibrary(libraryName, checkFunction) {
            return new Promise((resolve) => {
                if (checkFunction()) {
                    resolve();
                    return;
                }
                const checkInterval = setInterval(() => {
                    if (checkFunction()) {
                        clearInterval(checkInterval);
                        resolve();
                    }
                }, 100);
                setTimeout(() => {
                    clearInterval(checkInterval);
                    resolve();
                }, 10000);
